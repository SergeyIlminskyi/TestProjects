@model ABMCloud.Models.EmployeeDetailsModel

@{
    ViewBag.Title = "Employee details";
}

<head>
    <title>@ViewBag.Title</title>
</head>


<div class="container body-content">
    <h1>@ViewBag.Title</h1>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2">Surname:</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Name:</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Patronymic:</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Patronymic, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Birthday:</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control w100", @readonly = "readonly" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Last date of vacation:</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.LastVacationDate, new { htmlAttributes = new { @class = "form-control w100", @readonly = "readonly" } })
            </div>
        </div>

        @using (Ajax.BeginForm("VacationsByEmploee", "Vacation", new AjaxOptions() { HttpMethod = "Post", UpdateTargetId = "vacations" }, new { @class = "form-group" }))
        {
            @Html.HiddenFor(model => model.Id)

            @Html.Partial("EmployeesPartialView/VacationFilter", Model.VacationFilter)

            <div id="vacations"></div>

            
        }





        <button class="btn btn-info" type="button" onclick="window.location.href = '@Url.Action("EmployeesList", "Employee")'">
            Back
            <span class="glyphicon glyphicon-arrow-left"></span>
        </button>
    </div>
</div>
