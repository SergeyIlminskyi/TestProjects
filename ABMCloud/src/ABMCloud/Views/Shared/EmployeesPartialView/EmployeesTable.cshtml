
@model ABMCloud.Models.EmployeeModel



<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-md-2">Name</th>
                <th class="col-md-2">Surname</th>
                <th class="col-md-2">Patronymic</th>
                <th>Last date of vacation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model.EmployeesList)
            {
            <tr class="clickable-row">
                <td class="col-md-5">@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Patronymic</td>
                <td>@item.Birthday</td>
                <td>
                    <button type="button" class="btn btn-warning btn-xs" onclick="window.location.href = '@Url.Action("EditEmployee", "Employee", new { id = item.Id })'">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                    <button type="button" class="btn btn-danger btn-xs" onclick="window.location.href = '@Ajax.ActionLink("RemoveEmployee", "Employee", new { id = item.Id }, null)'">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

<div class="container">
    <button type="button" class="btn btn-success"  onclick="window.location.href = '@Url.Action("EmployeeDetails", "Employee")'">
        Add 
        <span class="glyphicon glyphicon-plus"></span>
    </button>
</div>


