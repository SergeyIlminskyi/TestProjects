@model Moneyveo.TestTask.MatrixModel

<div class="row mt30">
    <table class="table table-bordered center wi">
        <tbody>
            @for (int i = 0; i < Model.Size; ++i)
            {
                <tr>
                    @for (int j = 0; j < Model.Size; ++j)
                    {
                        <td class="w25">@Model.Body[i, j]</td>
                    }
                </tr>
            }

        </tbody>
    </table>
</div>

<div class="row">
    <div class="center">
        @Ajax.ActionLink("<= Rotate left", "RotateMatrixLeft", "Home", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "matrix" }, new { @class = "btn btn-success" })
        @Ajax.ActionLink("Rotate right =>", "RotateMatrixRight", "Home", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "matrix" }, new { @class = "btn btn-success" })
    </div>
</div>
<div class="row mt15">
    @Html.ActionLink("Export matrix", "ExportMatrixToFile", "Home", new { @class = "btn btn-primary" })
</div>





